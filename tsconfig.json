{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // "inlineSourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    // any imports or exports without a type modifier are left around
    "verbatimModuleSyntax": true,
    "strict": true
  },
  "include": ["./src/**/*.mts"]
}
